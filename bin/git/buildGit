#!/bin/bash

PRE
MAKE=
BUILD_FLAGS=

OS=`uname -s`

if [[ "$OS" == "Linux" ]]; then
  BUILD=make
else
  BUILD=gmake
  BUILD_FLAGS=""
fi

cd $HOME/dev/git &&
rm -rf /usr/bin/local/git && AR=ar CC=gcc $BUILD -j6 NO_GETTEXT=1 BLK_SHA1=1 $BUILD_FLAGS prefix=/usr/local && sudo make prefix=/usr/local install
