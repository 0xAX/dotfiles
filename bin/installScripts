#!/bin/bash

shopt -s extglob

pwd=$PWD
SCRIPTS_DIR="$HOME/bin"
SCRIPTS_DEST="/usr/bin"

BUILD_DIR="$SCRIPTS_DIR/build/*"
DEV_DIR="$SCRIPTS_DIR/dev/*"
FEDORA_DIR="$SCRIPTS_DIR/fedora/*"
UBUNTU_DIR="$SCRIPTS_DIR/ubuntu/*"
GIT_DIR="$SCRIPTS_DIR/git/*"
SYSTEM_DIR="$SCRIPTS_DIR/system/scripts/*"

#echo $SCRIPTS_DIR
#echo $BUILD_DIR
#cd $SCRIPTS_DIR

#echo $BUILD_DIR

#
# systemd paths
#
SYSTEMD_DIR="$SCRIPTS_DIR/system/systemd/*"
SYSTEMD_SCRIPTS_DIR="$SCRIPTS_DIR/system/systemd-scripts/*"

SYSTEMD_SCRIPTS_PATH="/usr/lib/systemd/scripts/"
SYSTEMD_SERVICES="/usr/lib/systemd/system/"

STANDARD_SCRIPTS=$(ls -p $SCRIPTS_DIR | grep -v /)

echo $STANDARD_SCRIPTS
echo "Copying standard scripts to the $SCRIPTS_DEST"
sudo cp -r -v $STANDARD_SCRIPTS $SCRIPTS_DEST
echo "Done."

echo "Copying scripts to $SCRIPTS_DEST"
sudo cp -r -v $BUILD_DIR $DEV_DIR $FEDIRA_DIR $UBUNTU_DIR $GIT_DIR $SYSTEM_DIR $SCRIPTS_DEST
echo "Done."

echo "Copying systemd services to "
sudo cp -r -v $SYSTEMD_DIR $SYSTEMD_SERVICES
echo "Done."

echo "Copying systemd-scripts to $SYSTEMD_SCRIPTS_PATH"
sudo mkdir -p -v $SYSTEMD_SCRIPTS_PATH
sudo cp -r -v $SYSTEMD_SCRIPTS_DIR $SYSTEMD_SCRIPTS_PATH
echo "Done."

shopt -u extglob

exit 0;
