#
# My i3 configuration file
#
# Feel free to reuse and enjoy (0xAX)
#

client.focused          #8b3626 #8b3626 #ffffff #8b3626
client.focused_inactive #333333 #5f676a #ffffff #484e50

# Let's use Alt for mode key
set $mod Mod1
# default font
font pango:DejaVu Sans Mono, FontAwesome 12
# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal --profile=alex
# start emacs
bindsym $mod+e exec terminator --profile=alex -x emacs
# start mutt
bindsym $mod+m exec terminator --profile=alex -e "TERM=xterm-256color ~/dev/muttx/mutt"
# start browser
bindsym $mod+b exec firefox
# kill focused window
bindsym $mod+q kill
# mc
bindsym $mod+Shift+f exec terminator --profile=alex -x mc ~/
# restart i3
bindsym $mod+c exec i3-msg restart
# start dmenu (a program launcher)
bindsym $mod+d exec dmenu_run -b -sb 'black' -nf 'white'  -nb 'sienna'
# go to the next workspace
bindsym $mod+Tab workspace next
# go to the prevoious workspace
bindsym $mod+BackSpace workspace prev

# change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+i focus up
bindsym $mod+l focus right

bindsym $mod+Left focus left
bindsym $mod+Right focus right
bindsym $mod+Up focus up
bindsym $mod+Down focus down

# layouts
bindsym $mod+f fullscreen
bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+v layout splitv
bindsym $mod+h layout splith

#
# workspaces
#
set $tag1 "1:&#xf120;"
set $tag2 "2:&#xf121;"
set $tag3 "3:&#xf269;"
set $tag4 "4:&#xf17e;"
set $tag5 "5:&#xf0e0;"
set $tag6 "6:&#xf15b;"
set $tag7 "7:&#xf1c1;"
set $tag8 "8:&#xf02d;"

bindsym $mod+1 workspace $tag1
bindsym $mod+2 workspace $tag2
bindsym $mod+3 workspace $tag3
bindsym $mod+4 workspace $tag4
bindsym $mod+5 workspace $tag5
bindsym $mod+6 workspace $tag6
bindsym $mod+7 workspace $tag7
bindsym $mod+8 workspace $tag8

bindsym $mod+Shift+1 move container to workspace $tag1
bindsym $mod+Shift+2 move container to workspace $tag2
bindsym $mod+Shift+3 move container to workspace $tag3
bindsym $mod+Shift+4 move container to workspace $tag4
bindsym $mod+Shift+5 move container to workspace $tag5
bindsym $mod+Shift+6 move container to workspace $tag6
bindsym $mod+Shift+7 move container to workspace $tag7
bindsym $mod+Shift+8 move container to workspace $tag8

bar {
    colors {
           background #000000
           statusline #ffffff
           separator  #ffffff
           # Type              border  bg      fg
           focused_workspace  #00c5cd #00c5cd #ffffff
           active_workspace   #333333 #ff4500 #ffffff
           inactive_workspace #333333 #222222 #888888
           urgent_workspace   #aa0000 #990000 #ffffff
    }
    tray_output primary
    position top
    status_command i3status -c ~/.i3/i3status.conf
    i3bar_command i3bar
}

# resizing
bindsym $mod+r mode "resize"
mode "resize" {
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt

    bindsym Return mode "default"
    bindsym Esc    mode "default"
}

# lock screen
bindsym $mod+Control+l exec i3-msg workspace "10: tmp" && i3lock --tiling --dpms --color 000000

# sound
bindsym $mod+0 exec "amixer set Master  -q 1%+"
bindsym $mod+9 exec "amixer set Master -q 1%-"
bindsym $mod+u exec "amixer -q sset Master toggle"

# walpaper
exec feh --bg-scale ~/Desktop/wallpaper-bird.jpg &
