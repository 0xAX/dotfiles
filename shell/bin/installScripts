#!/bin/bash

shopt -s extglob

SCRIPTS_DIR="$HOME/bin"
SCRIPTS_DEST="/usr/bin"

BUILD_DIR="$SCRIPTS_DIR/build/*"
DEV_DIR="$SCRIPTS_DIR/dev/*"
FEDORA_DIR="$SCRIPTS_DIR/fedora/*"
GIT_DIR="$SCRIPTS_DIR/git/*"
GIT_PROMPT="$SCRIPTS_DIR/git-prompt/*"
MATH_DIR="$SCRIPTS_DIR/math/*"
SYSTEM_DIR="$SCRIPTS_DIR/system/scripts/*"

for SCRIPT in $BUILD_DIR  \
	      $DEV_DIR    \
	      $FEDIRA_DIR \
	      $GIT_DIR    \
	      $GIT_PROMPT \
	      $UBUNTU_DIR \
	      $MATH_DIR   \
	      $SYSTEM_DIR; do
        chmod +x $SCRIPT
done

echo "Copying scripts to $SCRIPTS_DEST"
sudo cp -r -v $BUILD_DIR \
     $DEV_DIR            \
     $FEDIRA_DIR         \
     $UBUNTU_DIR         \
     $GIT_DIR            \
     $GIT_PROMPT         \
     $SYSTEM_DIR         \
     $MATH_DIR           \
     $SCRIPTS_DEST

exit 0
