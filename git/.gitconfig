[core]
        editor = "$EMACS"
        filemode = false
        trustctime = false
        excludesfile = /home/alex/.gitignore_global
        checkstat = default
        quotepath = false
        eol = native
        whitespace = trailing-space

[credential]
        helper = cache

[diff]
        renameLimit = 4096
        renames = true

[color]
        ui = auto
        interactive = always
        grep = always
        showbranch = always

[color "branch"]
        current = green bold
        local   = yellow bold
        remote  = magenta bold

[color "diff"]
        meta = white bold
        frag = magenta bold
        old = red bold
        new = green bold
        whitespace = red reverse

[color "status"]
        added = green bold
        changed = yellow bold
        untracked = red bold
        unmerged = magenta bold

[gc]
        auto = 5000

[grep]
        lineNumber = true
        patternType = extended
        extendedRegexp = true

[help]
        format = man
        autocorrect = 1

[log]
        date = rfc

[man]
        viewer = man

[push]
    default = current

[rebase]
    stat = true

[reset]
    confirmHardReset = true

[sendemail]
    from = Alexander Kuleshov <kuleshovmail@gmail.com>
    smtpencryption = tls
    smtpserver = smtp.gmail.com
    smtpuser = kuleshovmail@gmail.com
    smtpserverport = 587
    multiedit = true
    confirm = always

[sequence]
    editor = "$EMACS"

[commit]
    signoff = false
    gpgsign = true
    verbose = true

[gpg]
    program = /usr/bin/gpg2

[status]
    branch = true
    displayCommentPrefix = true
    relativePaths = false
    showUntrackedFiles = all
    submodulesummary = true

[user]
    name = Alexander Kuleshov
    email = kuleshovmail@gmail.com
    signingkey = 6D980FFA0624AF79

[web]
    browser = firefox

[http]
    cookiefile = /home/alex/.gitcookies

[transfer]
    fsckObjects = false

[alias]
    one = show -s --pretty='format:%h (\"%s\")'
    graph = log --all --graph --decorate --oneline
    l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    ignore = "!gi() { local IFS=','; curl -sL https://www.toptal.com/developers/gitignore/api/\"$*\"; }; gi"

[pull]
    rebase = false

[cinnabar]
    version-check = 1620808716
    helper = /home/alex/.mozbuild/git-cinnabar/git-cinnabar-helper

[url "ssh://git@github.com/"]
    insteadOf = https://github.com/
